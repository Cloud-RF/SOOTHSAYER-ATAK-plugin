<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dp_4"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_margin="3dp"
        android:background="@android:color/white" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/svMode"
            android:text="@string/api_mode"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14" />

        <Switch
            android:id="@+id/svMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textOff="@string/single"
            android:textOn="@string/multiple"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"
            android:thumbTextPadding="4dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_8"
        android:orientation="vertical">

        <!-- Co-Opt Refresh Settings -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbLinkLines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/link_lines"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbKmzLayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/kmzlayer"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Co-opt refresh"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Time Refresh Section -->
            <CheckBox
                android:id="@+id/cbCoOptTimeRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interval (s)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etCoOptTimeInterval"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/et_background"
                android:inputType="number"
                android:numeric="integer"
                android:padding="4dp"
                android:text="60"
                android:textColor="@color/darker_gray"
                android:textSize="12sp" />

            <!-- Distance Refresh Section -->
            <CheckBox
                android:id="@+id/cbCoOptDistanceRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance (m)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etCoOptDistanceThreshold"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@drawable/et_background"
                android:inputType="number"
                android:numeric="integer"
                android:padding="4dp"
                android:text="100"
                android:textColor="@color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="382dp"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="Resolution"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dp_12" />

                <Spinner
                    android:id="@+id/megapixelSpinner"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/screen_background_dark"
                    android:popupBackground="@android:drawable/screen_background_dark"
                    android:spinnerMode="dropdown" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/tvHelp"
            style="@style/darkButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:src="@android:drawable/ic_dialog_info" />

        <ImageButton
            android:id="@+id/btnSpotBeam"
            style="@style/darkButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/spotbeam_marker_icon"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp" />

        <ImageButton
            android:id="@+id/btnSettingLogin"
            style="@style/darkButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:paddingBottom="0dp"
            android:src="@drawable/account" />

    </LinearLayout>

</LinearLayout>